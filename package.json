{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "ethers",
  "title": "Ethers",
  "description": "Utilities for ethereum development",
  "icon": "command-icon.png",
  "author": "wp-lai",
  "categories": [
    "Productivity",
    "Developer Tools"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "create-random-wallet",
      "title": "Create Random Wallet",
      "description": "Display the address, private key, and mnemonic phrase of a random created wallet",
      "mode": "view"
    },
    {
      "name": "query-network-info",
      "title": "Query Network Info",
      "description": "Display network info",
      "mode": "view"
    }

  ],
  "dependencies": {
    "@raycast/api": "^1.31.0",
    "ethers": "^5.6.1"
  },
  "devDependencies": {
    "@types/node": "~16.10.0",
    "@types/react": "^17.0.28",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^2.5.1",
    "react-devtools": "^4.19.2",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint"
  }
}
